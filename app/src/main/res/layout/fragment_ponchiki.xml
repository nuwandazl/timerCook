<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:confi="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gradient1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ponchiki"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/exit2"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#79ECE0E0"
                    android:contentDescription="TODO"
                    android:paddingStart="13dp"
                    android:textColor="#000"
                    app:cornerRadius="@android:dimen/app_icon_size"
                    app:icon="@drawable/baseline_close_24"
                    app:iconTint="@color/black" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/ponchiki_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/ponchiki"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ingr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/ingr"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/list_view2"
                android:layout_width="match_parent"
                android:layout_height="336dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/sposob_prig_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/sposob_prig_title"
                android:textColor="#000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/shagOne"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/stepOne"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagTwo"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/stepTwo"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagThree"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/stepThree"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagFour"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/stepFour"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagFive"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/stepFive"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagSix"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/stepSix"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagSeven"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/stepSeven"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/countTime"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="00:10"
                    android:textSize="35dp" />

                <Button
                    android:id="@+id/btnStartPause"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00008b"
                    android:text="@string/start"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00008b"
                    android:text="@string/reset"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    tools:visibility="visible" />
            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/black"
                style="@style/AppTheme"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                app:strokeColor="#00008b"
                app:strokeWidth="2dp"
                confi:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ponchiki2"></RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/result"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/result"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>