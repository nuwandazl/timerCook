<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:confi="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/gradient1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ponchiki"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/exit2"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#79ECE0E0"
                    android:contentDescription="TODO"
                    android:paddingStart="13dp"
                    android:textColor="#000"
                    app:cornerRadius="@android:dimen/app_icon_size"
                    app:icon="@drawable/baseline_close_24"
                    app:iconTint="@color/black" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/ponchiki_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Пончики"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ingr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Ингредиенты"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/list_view2"
                android:layout_width="match_parent"
                android:layout_height="336dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/sposob_prig_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Способ приготовления"
                android:textColor="#000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/shagOne"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="1. Муку просеять, смешать с сухими ингредиентами. Постепенно добавить масло и воду. Замесить мягкое тесто."
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagTwo"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="2. Тесто накрыть полотенцем и поставить в теплое место, я ставлю на водяную баню на 20-30 минут."
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagThree"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="3. Когда тесто увеличится вдвое, обмять его."
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagFour"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="4. Сформировать пончики. Для этого тесто разделить на 4 части. Скатать каждую часть в колбаску толщиной около 2 см. Колбаски разрезать на кусочки длиной около 8 см. Концы заготовки соединить, слепить колечко. Так слепить все пончики. Дать подойти 15 минут."
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagFive"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="5. В сковородке разогреть масло и жарить пончики на среднем огне до золотистого цвета. Минуты по две с каждой стороны."
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagSix"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="6. Выложить пончики на салфетку. Дать стечь лишнему жиру."
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shagSeven"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="7. Остудить и посыпать сахарной пудрой."
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/countTime"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="00:10"
                    android:textSize="35dp" />

                <Button
                    android:id="@+id/btnStartPause"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#00008b"
                    android:text="Начать"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#00008b"
                    android:text="Сброс"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    tools:visibility="visible"/>
            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/black"
                style="@style/AppTheme"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                app:strokeColor="#00008b"
                app:strokeWidth="2dp"
                confi:cardCornerRadius="40dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ponchiki2"></RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/result"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Готово! Приятного аппетита!"
                android:textColor="#000000"
                android:textSize="14sp" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>